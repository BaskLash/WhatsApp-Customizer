{
  "manifest_version": 3,
  "name": "WhatsApp Web Customizer â€“ Themes, Fonts, Backgrounds & Quick Reply Bubbles",
  "version": "1.0.1",
  "description": "Personalize WhatsApp Web with themes, fonts, backgrounds, and fast-reply tools. Lightweight, clean, and fully open source.",
  "permissions": ["storage", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Toggle Side Panel"
  },
  "icons": {
    "16": "icon/icon16.png",
    "48": "icon/icon48.png",
    "128": "icon/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/"],
      "js": [
        "changeColor.js",
        "fontFamilyChange.js",
        "changeContent.js",
        "quick-reply-bubbles.js",
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": ["https://web.whatsapp.com/"],
  "web_accessible_resources": [
    {
      "resources": ["images/*", "images/*/*", "images/*/*/*"],
      "matches": ["https://web.whatsapp.com/*"]
    }
  ]
}
